{
    "name": "chaloman/tonal-php",
    "description": "PHP port of Tonal.js - A music theory library for notes, intervals, chords, scales, and more",
    "type": "library",
    "keywords": [
        "music",
        "theory",
        "notes",
        "intervals",
        "chords",
        "scales",
        "modes",
        "keys",
        "midi",
        "tonal"
    ],
    "homepage": "https://github.com/ChalomanDev/tonal-php",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^4.1",
        "laravel/pint": "^1.26",
        "phpstan/phpstan": "^2.1"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Chaloman\\Tonal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Gonzalo Guevara",
            "email": "gonzarock@yahoo.com"
        }
    ],
    "support": {
        "issues": "https://github.com/ChalomanDev/tonal-php/issues",
        "source": "https://github.com/ChalomanDev/tonal-php"
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint",
        "lint:test": "pint --test",
        "analyse": "phpstan analyse",
        "test": "pest"
    }
}
